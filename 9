
#include "pch.h" 
#include <iostream> 
using namespace std; 
int i, m, min= 2147483647, f, o; 
const int r = 4, k = 4; 
int main() 
{ 
setlocale(LC_ALL, "RUS"); 
int n[k][r] = { { 1, 3, 2 }, { 0, 9, 4 }, { 35, 1, 8, 13}, { 41, 5 } }; 
for (i = 0; i < k; i++) 
{ 
f = 0; 
for (m = 0; m < r; m++) 
{ 
f += n[i][m]; 
} 
if (f < min) 
{ 
min = f; 
o = i+1; 
} 
} 
cout << " Строка с минимальной суммой элементов " << o << " " ; 
system("pause"); 
} 
